{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "paths": {
      "@cpany/core": ["./packages/core/src/index.ts"],
      "@cpany/core/*": ["./packages/core/*"],
      "@cpany/types": ["./packages/types/src/index.ts"],
      "@cpany/types/*": ["./packages/types/*"],
      "@cpany/utils": ["./packages/utils/src/index.ts"],
      "@cpany/utils/*": ["./packages/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}