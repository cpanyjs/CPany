{
  "name": "@cpany/monorepo",
  "private": true,
  "scripts": {
    "dev": "cpany dev example --open",
    "site": "cpany build example --outDir site",
    "build": "pnpm --filter ./packages/** run build",
    "build:cli": "pnpm -C packages/cli run build",
    "format": "prettier --write packages/**/*.{ts,js,vue} --ignore-path .gitignore",
    "release": "tsx scripts/release.ts",
    "publish": "pnpm publish -r --access public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write"
    ],
    "*.vue": [
      "prettier --parser=vue --write"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.0.6",
    "capture-website-cli": "^2.3.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "husky": "4.3.7",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsup": "^6.1.3",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.5.2"
}
